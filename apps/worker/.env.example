# Environment
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/sentinel?schema=public

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Worker Concurrency
WORKER_CONCURRENCY_RULES=5
WORKER_CONCURRENCY_ALERTS=10

# Rate Limiting (Future)
RATE_LIMITING_ENABLED=false
RATE_LIMIT_PER_DOMAIN=3

# Storage (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_STORAGE_BUCKET=screenshots

# Storage (S3/MinIO - alternative to Supabase)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=sentinel-storage
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_FORCE_PATH_STYLE=true

# FlareSolverr (Cloudflare bypass)
FLARESOLVERR_URL=http://localhost:8191/v1

# Email (Resend)
RESEND_API_KEY=re_xxxxx
EMAIL_FROM=Sentinel <alerts@yourdomain.com>

# Screenshots
SCREENSHOT_ENABLED=true
